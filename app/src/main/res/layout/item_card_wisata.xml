<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_user"
    app:cardCornerRadius="24dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/_10dp"
    android:padding="@dimen/_10dp"
    android:layout_margin="@dimen/_20dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profil"
            android:layout_width="@dimen/_100dp"
            android:layout_height="@dimen/_100dp"
            android:src="@drawable/tangkuban"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WISATA BANDUNG"
            android:textStyle="bold"
            android:textSize="@dimen/_16sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/iv_profil"
            app:layout_constraintTop_toTopOf="@id/iv_profil"/>

        <TextView
            android:id="@+id/tv_item_Deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Merupakan Wahana yang berada di daerah Lembang"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/_10dp"
            app:layout_constraintStart_toStartOf="@id/iv_profil"
            app:layout_constraintStart_toEndOf="@+id/iv_profil"
            app:layout_constraintTop_toBottomOf="@id/iv_profil" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
